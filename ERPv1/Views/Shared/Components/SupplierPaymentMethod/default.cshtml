
<card title="تفاصيل المدفوعات" header-back-ground="bg-primary" text-color="text-white" addational-class="fa-edit">
    <div class="container">
        <div class="row">
            <div class="col-4">
                <div class="form-group">
                    <label>طريقة الدفع</label>
                    @Html.Editor("PaymentDetails.PaymentMethod", "SupplierPaymentMethodEnum", new
               {
                   htmlAttributes = new
                   {
                       @class = "form-control",
                       @data_bind = "value:PaymentDetails.PaymentMethod,event:{change:ChangePaymentMethod}"
                   }
               })
                </div>
            </div>
            <div class="col-4">
                <div class="form-group">
                    <label>المبلغ المدفوع</label>
                    <input class="form-control" data-bind="value:PaymentDetails.PaymentAmount" />
                </div>
            </div>
            <div class="col-4">
                <div class="form-group">
                    <label>تاريخ الدفع</label>
                    <input class="form-control dateSamll" data-bind="value:PaymentDetails.PaymentDate" />
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-4">
                <div class="form-group">
                    <label>رقم الإيصال</label>
                    <input class="form-control" data-bind="value:PaymentDetails.RecieptNumber" />

                </div>
            </div>
            <div class="col-4">
                <div class="form-group">
                    <label>التوصيف</label>
                    <textarea class="form-control" cols="3" rows="3" data-bind="value:PaymentDetails.Description">
                    </textarea>
                </div>
            </div>

        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-4">
                <div class="form-group">
                    <label>اختار الحساب</label>
                    @Html.Editor("PaymentDetails.SafeAccNum", "SafeAccounts", new
               {
                   htmlAttributes = new
                   {
                       @class = "form-control",
                       @data_bind = "value:PaymentDetails.SafeAccNum,visible:PaymentDetails.IsSafe"
                   }
               })

                    @Html.Editor("PaymentDetails.BankAccNum", "BankAccounts", new
              {
                  htmlAttributes = new
                  {
                      @class = "form-control",
                      @data_bind = "value:PaymentDetails.BankAccNum,visible:PaymentDetails.IsBank"
                  }
              })


                    @Html.Editor("PaymentDetails.CustodyAccNum", "CustodayAcc", new
              {
                  htmlAttributes = new
                  {
                      @class = "form-control",
                      @data_bind = "value:PaymentDetails.BankAccNum,visible:PaymentDetails.IsCustody"
                  }
              })

                </div>
            </div>
            <div class="col-4" data-bind="visible:PaymentDetails.IsCheck">
                <div class="form-group">
                    <label>رقم الشيك</label>
                    <input class="form-control" data-bind="value:PaymentDetails.CheckNum" />
                </div>
            </div>

        </div>
    </div>

    <div class="container">
        <div class="row">

            <div class="col-4" data-bind="visible:PaymentDetails.IsCheck">
                <div class="form-group">
                    <label>تاريخ التحرير</label>
                    <input class="form-control dateSamll" data-bind="value:PaymentDetails.WritingDate" />
                </div>
            </div>
            <div class="col-4" data-bind="visible:PaymentDetails.IsCheck">
                <div class="form-group">
                    <label>تاريخ الاستحقاق</label>
                    <input class="form-control dateSamll" data-bind="value:PaymentDetails.PaymentDueDate" />
                </div>
            </div>
        </div>
    </div>
    <div class="card-footer text-center">
        <button class="btn btn-primary" data-bind="click:Save">حفظ</button>
    </div>
</card>