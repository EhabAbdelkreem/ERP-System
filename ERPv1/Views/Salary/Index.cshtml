@model IEnumerable<ERPv1.HR.Model.SalaryBatch>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BatchMonth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BatchYear)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TransId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BatchMonth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BatchYear)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TransId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a> |
                @if (string.IsNullOrEmpty(item.TransId))
                {
                    <a asp-action="ManageBatch" asp-route-id="@item.Id" class="btn btn-primary">Manage Batch</a>
                }


            </td>
        </tr>
}
    </tbody>
</table>
