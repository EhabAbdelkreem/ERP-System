@model ERPv1.ERP.GeneralLedgerModule.AccountCharts.ViewModel.UpdateAccountVM
@{
    ViewData["Title"] = "Edit";
}

<form asp-action="Edit">
    <card title="تعديل حساب" header-back-ground="bg-primary" text-color="text-white" addational-class="fa-edit">
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="container">
            <div class="row">
                <div class="col-4">
                    <div class="form-group">
                        <label asp-for="AccNum" class="control-label"></label>
                        <input asp-for="AccNum" class="form-control" disabled="disabled" />
                        <input asp-for="AccNum" class="form-control" type="hidden" />
                    </div>
                </div>
                <div class="col-4">
                    <div class="form-group">
                        <label asp-for="Balance" class="control-label"></label>
                        <input asp-for="Balance" class="form-control" disabled="disabled" />
                        <input asp-for="Balance" class="form-control" type="hidden" />
                    </div>
                </div>

            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-4">
                    <div class="form-group">
                        <label asp-for="AccountName" class="control-label"></label>
                        <input asp-for="AccountName" class="form-control" />
                        <span asp-validation-for="AccountName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-4">
                    <div class="form-group">
                        <label asp-for="AccountNameAr" class="control-label"></label>
                        <input asp-for="AccountNameAr" class="form-control" />
                        <span asp-validation-for="AccountNameAr" class="text-danger"></span>
                    </div>
                </div>

            </div>
        </div>

        <div class="container">
            <div class="row">
                <div class="col-4">
                    <div class="form-group">
                        <label asp-for="CurrencyId" class="control-label"></label>
                        @Html.EditorFor(x => x.CurrencyId, "CurrencyList", new { htmlAttributes = new { @class = "form-control" } })
                        <span asp-validation-for="CurrencyId" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-4">
                    <div class="form-group">
                        <label asp-for="BranchId" class="control-label"></label>
                        @Html.EditorFor(x => x.BranchId, "BranchList", new { htmlAttributes = new { @class = "form-control" } })
                        <span asp-validation-for="BranchId" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-4">
                    <label asp-for="IsActive" class="control-label">نشط</label>
                    <input type="checkbox" asp-for="IsActive" class="form-control" />
                </div>
            </div>
        </div>
        <div class="card-footer text-center">
            <input type="submit" value="حفظ" class="btn btn-primary" />
            <a asp-action="Index" class="float-left">عودة للقائمة</a>
        </div>
    </card>
</form>

@section Scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}